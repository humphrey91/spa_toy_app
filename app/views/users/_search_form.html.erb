<nav class="nav search-header">
  <%= link_to(users_path(home: true),class: "text-info", style: "margin: 0 auto;", remote: true) do %>
    <h1 style="margin: 0 auto;">All users</h1> 
  <% end %>
  <%= form_with url: users_path, method: :get, remote: true, class: 'search-form', turbolinks: "false" do |form| %>
    <div class="form-group input-group " id="searchFormGroup">
        <label for="searchInput" class="bmd-label-floating">Search</label>
        <%= form.text_field :search, class: "form-control", autocomplete: :off, id: "searchInput" %>
        <span class="input-group-btn">
          <%= form.submit :search, type: "submit", class: "btn btn-info btn-round btn-sm" %>     
        </span>
    </div>
  <% end %>
  <div class="user-display-meter">
    <%= page_entries_info @users %>
  </div>
</nav>
