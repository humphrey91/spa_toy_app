<% if params[:home] %>
  $('.parent-profile').removeClass('col-lg-6 offset-lg-3').addClass('col-lg-3 ')
  $('.main-page').removeClass('col-lg-3').addClass('col-lg-6')
<% elsif !@users.blank? %>
  $("#searchInput").val("");
  $("#searchFormGroup").removeClass("is-focused is-filled");
  $(".user-display-meter").html("<%= page_entries_info @users %>");
  $(".user-page").html("<%= j render(partial: 'user_page', locals: { users: @users } ) %>");
<% else %>
  $("#searchInput").val("");
  $("#searchFormGroup").removeClass("is-focused is-filled");
  $(".user-display-meter").html("");
  $(".main-page.user-page").html("<%= page_entries_info @users %>");
<% end %>
