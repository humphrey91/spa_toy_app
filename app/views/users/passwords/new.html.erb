
<div class="container">
  <div class="row align-items-center" style="height: 100vh;">
    <div class="col-md-6 ml-auto mr-auto">
      <div class="card card-signup">  
        <div class="card-header card-header-info text-center">
            <h4>Forgot your password?</h4>
        </div>
        
        <div class="card-body">
      

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= devise_error_messages! %>

            
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="material-icons">email</i>
                  </span>
                </div>
                <label for="loginEmail" class="bmd-label-floating" style="margin-left:56px;">Email</label>
                <%= f.email_field :email, autocomplete: "email", class: "form-control", id: "loginEmail" %>
              </div>
            

            <div class="actions card-footer justify-content-center">
              <%= f.submit "Send me reset password instructions", class: "btn btn-info btn-lg" %>
            </div>
          <% end %>

          <%= render "users/shared/links", { extra_class: "text-info"} %>
        </div>
      </div>
    </div>
  </div>
</div>
