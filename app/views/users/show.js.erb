var mainVar = {
     
    }

$('#sidebar .list-group-item').removeAttr("href"); 

function setTransform(mainVar) {
  
  <% if !params[:page] %>
    $('.parent-profile').html("<%= j render(partial: 'users/profile', locals: { user: @user, link: false, show_posts: true } ) %>");
    $('.full-profile-info').animate({
      'max-height': "600px",
    }, 1200);
    $('.parent-profile').removeClass('col-lg-3').addClass('col-lg-6 offset-lg-3')
    $('.main-page').removeClass('col-lg-6').addClass('col-lg-3')
  <% else %>
    $('.user-box-head').html("<%= j render( 'users/user', { user: @user, size: 100, use_link: false } ) %> ");
    $('.full-profile-info').html("<%= j render(partial: 'users/show', locals: { user: @user } ) %>");
  <% end %>
  if ($( window ).outerWidth() < 992) {
    $('html, body').animate({ scrollTop: 0 }, 400);
  }
  
  
}

setTransform(mainVar);