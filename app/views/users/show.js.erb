var mainVar = {
      mainPageWidth: $('.main-page').width(),
      mainPageLeft: $('.main-page').offset().left,
      mainPageTop: $('.main-page').offset().top
    }

$('.list-group-item').removeAttr("href"); 

function setTransform(mainVar) {
  if ($(window).width() > 767) {
    var boxPad = 15
  } else {
    var boxPad = 7.5
  }
  $("#sidebar").css({"position": "absolute"});
  $("#sidebar").css({"top": 0 });
  $(".main-page").css({
    "position": "absolute",
    "top": mainVar.mainPageTop,
    "left" : mainVar.mainPageLeft,
  });
  $(".main-page").animate({
    height: 0,
    left: "100%",
    opacity: 0,
  }, 1200);
  
  $("#sidebar").animate({
    left: mainVar.mainPageLeft + 7.5,
    width: mainVar.mainPageWidth + boxPad,
    height: "600px",
  }, 1200, function(){
    $('.main-page').css({
        position: "relative",
        left: 0,
        top: 0,
        height: "100%",
        opacity: 1,
    })    
    $('.parent-profile').html("");
    $('.main-page').html("<%= j render(partial: 'full_profile' ) %>");
    $('#sidebar').css({
      height: "600px",
      "box-shadow": "0 0.5rem 0.75rem rgba(0, 0, 0, 0.05)",
    });
  });
}

function resetPage(mainVar) {
  
}
setTransform(mainVar);